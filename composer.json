{
  "name": "brain/cell",
  "description": "Brain SDK",
  "type": "library",

  "autoload": {
    "psr-4": {
      "Brain\\Cell\\": "src/Brain/Cell"
    }
  },

  "require": {
    "php": ">=7.1",
    "ext-json": "*",

    "doctrine/collections": "^1.6 || ^2.0 || ^3.0",
    "doctrine/common": "^2.0 || ^3.0",

    "symfony/http-foundation": "~3.1 || ~4.0 || ^5.0 || ^6.0",
    "symfony/validator": "~3.1 || ~4.0 || ^5.0 || ^6.0",
    "psr/container": "^1.0"
  },

  "require-dev": {
    "phpunit/phpunit": "^7.5.14",

    "mmoreram/php-formatter": "^1.3.3",

    "squizlabs/php_codesniffer": "^3.3.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "doctrine/coding-standard": "^6.0",
    "slevomat/coding-standard": "^5.0",

    "phpstan/phpstan": "^0.11",
    "phpstan/phpstan-strict-rules": "^0.11",
    "phpstan/phpstan-phpunit": "^0.11",

    "guzzlehttp/guzzle": "^6.3"
  },

  "suggest": {
    "guzzlehttp/guzzle": "Allow requests to be made using the GuzzleHttpRequestAdapter"
  }
}
